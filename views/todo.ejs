<html>

<head>
    <title> To-Do List </title>
    <script
    src="https://code.jquery.com/jquery-1.12.4.js"
    integrity="sha256-Qw82+bXyGq6MydymqBxNPYTaUXXq7c8v3CwiYwLLNXU="
    crossorigin="anonymous"></script>
    <link href="/assets/styles.css" rel="stylesheet" type="text/css">
    <script src="/assets/todo-list.js"></script>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/assets/materialize.min.css"  media="screen,projection"/>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="/assets/materialize.min.js"></script>
    <img src="/assets/logo.png" style="width:60px; height:60px; margin-left: 45%; margin-bottom: 0px"/>
    <br>
    <br>
    <div class="row">
            <div class="col s12 m10 offset-l1 ">
              <div class="card grey darken-3  waves-light">
                <div class="card-content  white-text">
                        <div id="todo-table">
                                <form style="display:inline-block; width: 100%">
                                    <input style="float: left; width: 80%" type="text" name="item" placeholder="Add new item.." required/>
                                    <button style="float: right; margin-top: 1em" class="btn waves-effect waves-yellow" type="submit">Add Item</button>
                                </form>
                                <ul style="margin-top: 1px;"class="collection">
                                    <% for(var i=0; i<todos.length; i++){ %>
                                        <li class="collection-item active"><%= todos[i].item %></li>
                                        
                                    <%} %>

                                </ul>
                            </div>
                </div>
              </div>
            </div>
          </div>

    
   
</body>
</html>